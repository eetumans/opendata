{#
/**
 * @file
 * Print collapsible search
 *
 * @ingroup themeable
 */
#}
{{ attach_library('avoindata_hero/polyfill') }}
{{ attach_library('avoindata_hero/avoindata_hero') }}
<div class="avoindata-hero">
  {{ form.form_build_id }}
  {{ form.form_token }}
  {{ form.form_id }}
  <div class="heading-search-container">
    <div class="row">
      <div class="col-md-5">
        <h1>
          <img class="avoindata-hero-logo" src="/resources/images/logo/opendata.svg"/>
          Avoindata.fi
        </h1>
      </div>
    </div>
    <div class="row avoindata-hero-subheading">
      <div class="col-md-5">
        <p>Demoversio avoimen datan tieto- ja jakelukanavasta suomalaisille yhteisöille, yrityksille ja kansalaisille.</p>
        <a href="">Lue lisää >></a>
      </div>
    </div>
    <div class="row avoindata-hero-boxes">
      <div class="col-md-4">
        <div class="avoindata-hero-box">
          <h2 id="avoindata-datasets-count">0</h2>
          <p>Tietoaineistoa</p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="avoindata-hero-box">
          <h2 id="avoindata-organizations-count">0</h2>
          <p>Organisaatiota</p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="avoindata-hero-box">
            <h2 id="avoindata-applications-count">0</h2>
            <p>Sovellusta</p>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="avoindata-hero-input-col">
        <div class="input-group">
          <div class="input-group-btn">
            <button type="button" class="btn btn-default dropdown-toggle btn-hero-dropdown" data-toggle="dropdown" value="1" aria-haspopup="true" aria-expanded="false">Tietoaineistot <span class="caret"></span></button>
            <ul class="dropdown-menu">
              <li><a href="#" data-value="1">Tietoaineistot</a></li>
              <li><a href="#" data-value="2">Sovellukset</a></li>
              <li><a href="#" data-value="3">Organisaatiot</a></li>
            </ul>
          </div>
          {{ form.search }}
          {{ form.searchfilter }}
        </div>
        {{ form.actions }}
      </div>
    </div>
    <div class="row">
      <div class="col-md-5">
          <ul class="list-inline">
              <li><a href="/data/dataset?sort=metadata_modified+desc">Uusimmat</a></li>
              <li><a href="/data/dataset?sort=views_recent+desc">Suosituimmat</a></li>
              <li><a href="/data/showcase">Sovellukset</a></li>
          </ul>
      </div>
    </div>
  </div>
</div>
