name = YTP theme
description = YTP theme
core = 7.x
base theme = bootstrap


;;;;;;;;;;;;;;;;;;;;;
;; Regions
;;;;;;;;;;;;;;;;;;;;;

regions[navigation]     = 'Navigation'
regions[highlighted]    = 'Highlighted'
regions[header]         = 'Header'
regions[help]           = 'Help'
regions[content]        = 'Content'
regions[sidebar_first]  = 'Primary'
regions[sidebar_second] = 'Secondary'
regions[footer]         = 'Footer'
regions[page_top]       = 'Page top'
regions[page_bottom]    = 'Page bottom'
regions[top_navigation] = 'Top navigation'

;; Front page custom regions
regions[top_bar_primary] = 'Front Page Top Bar Left Side'
regions[top_bar_secondary] = 'Front Page Top Bar Right Side'
regions[content_grid_top] = 'Front Page Content Grid Top Side'
regions[content_grid_left] = 'Front Page Content Grid Left Side'
regions[content_grid_right] = 'Front Page Content Grid Left Right Side'
regions[content_grid_left_lower] = 'Front Page Content Grid Lower Left Side'

;;;;;;;;;;;;;;;;;;;;;
;; Stylesheets
;;;;;;;;;;;;;;;;;;;;;

stylesheets[all][] = 'vendor/bootstrap.min.css'

; For information on choosing the desired method, please read the Drupal
; Bootstrap sub-theme "how-to" documentation:
; https://drupal.org/node/1978010

; ;----------------------------------
; ; METHOD 1: Bootstrap Source Files
; ;----------------------------------
; 
; ;;;;;;;;;;;;;;;;;;;;;
; ;; Scripts
; ;;;;;;;;;;;;;;;;;;;;;
; 
scripts[] = 'vendor/bootstrap.min.js'
scripts[] = 'vendor/moment-with-langs.js'
scripts[] = 'vendor/bootstrap-datetimepicker.js'
;
; ; Disable BootstrapCDN if using Bootstrap source files in your sub-theme.
settings[bootstrap_cdn] = ''


; ;-------------------------
; ; METHOD 2: Bootstrap CDN
; ;-------------------------
;
; Method 2 uses BootstrapCDN, the only thing you might need to provide here
; is overrides to Bootstrap theme settings. Copy them here from the base theme
; to override.


; Override Bootstrap theme settings for YTP theme

; Hide sidebar background well
settings[bootstrap_region_well-sidebar_first] = ''
